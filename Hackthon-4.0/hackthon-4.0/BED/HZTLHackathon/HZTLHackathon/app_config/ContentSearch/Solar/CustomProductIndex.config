<sitecore>
	<contentSearch>
		<indexConfigurations>
			<indexConfiguration type="Sitecore.ContentSearch.SolrProvider.SolrIndexConfiguration, Sitecore.ContentSearch.SolrProvider">
				<configuration>
					<fields hint="raw:AddComputedIndexField">
						<field fieldName="Id" type="HZTLHackathon.Services.ComputedField+IntComputedField, HZTLHackathon" />
						<field fieldName="Title" type="Sitecore.ContentSearch.ComputedFields.ComputedField, Sitecore.ContentSearch" method="GetField">
							<args>Title</args>
						</field>
						<field fieldName="Description" type="Sitecore.ContentSearch.ComputedFields.ComputedField, Sitecore.ContentSearch" method="GetField">
							<args>Description</args>
						</field>
						<field fieldName="Category" type="Sitecore.ContentSearch.ComputedFields.ComputedField, Sitecore.ContentSearch" method="GetField">
							<args>Category</args>
						</field>
						<field fieldName="Price" type="HZTLHackathon.Services.ComputedField+DecimalComputedField, HZTLHackathon" />
						<field fieldName="DiscountPercentage" type="HZTLHackathon.Services.ComputedField+DecimalComputedField, HZTLHackathon" />
						<field fieldName="Rating" type="HZTLHackathon.Services.ComputedField+DecimalComputedField, HZTLHackathon" />

						<!-- Integer fields -->
						<field fieldName="Stock" type="HZTLHackathon.Services.ComputedField+IntComputedField, HZTLHackathon" />
						<field fieldName="Brand" type="Sitecore.ContentSearch.ComputedFields.ComputedField, Sitecore.ContentSearch" method="GetField">
							<args>Brand</args>
						</field>
						<field fieldName="Tags" type="Sitecore.ContentSearch.ComputedFields.ComputedField, Sitecore.ContentSearch" method="GetField">
							<args>Tags</args>
						</field>
						<field fieldName="Images" type="Sitecore.ContentSearch.ComputedFields.ComputedField, Sitecore.ContentSearch" method="GetField">
							<args>Images</args>
						</field>
					</fields>
				</configuration>
			</indexConfiguration>
		</indexConfigurations>
	</contentSearch>
</sitecore>
